---
interface Service {
  title: string;
  description: string;
  icon: string;
  color: string;
}

const services: Service[] = [
  {
    title: "Rescate Animal",
    description: "Atención inmediata a animales en situación de riesgo o abandono",
    icon: "🚑",
    color: "bg-blue-50"
  },
  {
    title: "Rehabilitación",
    description: "Cuidados médicos y recuperación de animales rescatados",
    icon: "🏥",
    color: "bg-green-50"
  },
  {
    title: "Adopción",
    description: "Programa de adopción responsable y seguimiento post-adopción",
    icon: "🏠",
    color: "bg-yellow-50"
  },
  {
    title: "Educación Ambiental",
    description: "Concientización sobre el cuidado animal y medio ambiente",
    icon: "📚",
    color: "bg-purple-50"
  }
];
---

<section id="services" class="w-full bg-white py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-normal font-['Quicksand'] text-gray-800 mb-4">
        Nuestros Servicios
      </h2>
      <p class="text-xl text-gray-600 font-['Quicksand'] max-w-3xl mx-auto">
        Trabajamos en diferentes áreas para garantizar el bienestar animal y la conservación del medio ambiente
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <div class={`${service.color} p-8 rounded-xl transition-transform hover:scale-105`}>
          <div class="text-4xl mb-4">{service.icon}</div>
          <h3 class="text-xl font-semibold font-['Quicksand'] text-gray-800 mb-3">
            {service.title}
          </h3>
          <p class="text-gray-600">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>