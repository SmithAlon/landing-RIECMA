---
interface Requirement {
  title: string;
  description: string;
  icon: string;
}

const requirements: Requirement[] = [
  {
    title: "Compromiso",
    description: "Disponibilidad para participar en actividades de rescate y cuidado animal",
    icon: "🤝"
  },
  {
    title: "Experiencia",
    description: "Conocimientos básicos en manejo y cuidado de animales",
    icon: "📚"
  },
  {
    title: "Trabajo en Equipo",
    description: "Capacidad para colaborar y comunicarse efectivamente con otros rescatistas",
    icon: "👥"
  },
  {
    title: "Responsabilidad",
    description: "Cumplimiento de protocolos y normas de seguridad",
    icon: "✅"
  }
];
---

<section id="requirements" class="w-full bg-gray-50 py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-normal font-['Quicksand'] text-gray-800 mb-4">
        Requisitos para Unirte
      </h2>
      <p class="text-xl text-gray-600 font-['Quicksand'] max-w-3xl mx-auto">
        Para ser parte de nuestro equipo, necesitamos personas comprometidas que cumplan con los siguientes requisitos
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {requirements.map((req) => (
        <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
          <div class="text-4xl mb-4">{req.icon}</div>
          <h3 class="text-xl font-semibold font-['Quicksand'] text-gray-800 mb-2">
            {req.title}
          </h3>
          <p class="text-gray-600">
            {req.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>