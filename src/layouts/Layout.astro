---
import '../styles/global.css';
import riecmaLogo from '../assets/RIECMA.png';

// Props interface
interface Props {
  title?: string;
  description?: string;
}

// Default props
const {
  title = "RIECMA - Rescate Independiente",
  description = "Equipo de rescatistas independientes dedicados al bienestar animal",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	<link rel="icon" type="image/png" href="./dog.png" />
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="w-full h-20 bg-white fixed top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 h-full flex items-center justify-between">
        <button onclick="window.scrollTo({ top: 0, behavior: 'smooth' })" class="cursor-pointer">
          <img src={riecmaLogo.src} alt="RIECMA Logo" class="h-12" />
        </button>

        {/* Hamburger menu button */}
        <button 
          id="menu-button"
          class="md:hidden p-2 hover:bg-gray-100 rounded-lg transition-colors"
          aria-label="Menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M4 6h16M4 12h16M4 18h16" 
            />
          </svg>
        </button>

        {/* Desktop menu */}
        <div class="hidden md:flex items-center space-x-8">
          <a href="#about" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand']">
            ¿Quiénes Somos?
          </a>
          <a href="#services" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand']">
            Servicios
          </a>
          <a href="#why-join" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand']">
            ¿Por Qué Unirte?
          </a>
          <a href="#requirements" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand']">
            Requisitos
          </a>
          <a href="#join-form" class="px-4 py-2 bg-[#e65c00] text-white rounded-lg hover:bg-[#cc5200] transition-colors font-['Quicksand']">
            Únete
          </a>
        </div>

        {/* Mobile menu */}
        <div id="mobile-menu" class="hidden absolute top-20 left-0 right-0 bg-white shadow-lg md:hidden">
          <div class="flex flex-col p-4 space-y-4">
            <a href="#about" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand'] p-2">
              ¿Quiénes Somos?
            </a>
            <a href="#services" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand'] p-2">
              Servicios
            </a>
            <a href="#why-join" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand'] p-2">
              ¿Por Qué Unirte?
            </a>
            <a href="#requirements" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand'] p-2">
              Requisitos
            </a>
            <a href="#join-form" class="bg-[#e65c00] text-white rounded-lg hover:bg-[#cc5200] transition-colors font-['Quicksand'] p-2 text-center">
              Únete
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="w-full h-28 bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 h-full flex items-center justify-center text-white">
        <p>&copy; {new Date().getFullYear()} RIECMA. Todos los derechos reservados.</p>
      </div>
    </footer>

    <script>
      import { setupNav } from '../scripts/nav';
      setupNav();
    </script>
  </body>
</html>