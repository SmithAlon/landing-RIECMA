---
import '../styles/global.css';
import riecmaLogo from '../assets/RIECMA.png';

// Props interface
interface Props {
  title?: string;
  description?: string;
}

// Default props
const {
  title = "RIECMA - Rescate Independiente",
  description = "Equipo de rescatistas independientes dedicados al bienestar animal",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="w-full h-20 bg-white fixed top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 h-full flex items-center justify-between">
        <button onclick="window.scrollTo({ top: 0, behavior: 'smooth' })" style="cursor: pointer">
          <img src={riecmaLogo.src} alt="RIECMA Logo" class="h-12" />
        </button>

        <div class="hidden md:flex items-center space-x-8">
          <button onclick="window.scrollTo({ top: document.getElementById('about').offsetTop, behavior: 'smooth' })" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand']">
            ¿Quiénes Somos?
		  </button>
          <button onclick="window.scrollTo({ top: document.getElementById('services').offsetTop, behavior: 'smooth' })" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand']">
            Servicios
          </button>
          <button onclick="window.scrollTo({ top: document.getElementById('why-join').offsetTop, behavior: 'smooth' })" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand']">
            ¿Por Qué Unirte?
          </button>
          <button onclick="window.scrollTo({ top: document.getElementById('requirements').offsetTop, behavior: 'smooth' })" class="text-gray-600 hover:text-blue-600 transition-colors font-['Quicksand']">
            Requisitos
          </button>
          <button onclick="window.scrollTo({ top: document.getElementById('join-form').offsetTop, behavior: 'smooth' })" class="px-4 py-2 bg-[#e65c00] text-white rounded-lg hover:bg-[#cc5200] transition-colors font-['Quicksand']">
            Únete
          </button>
        </div>
      </nav>
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="w-full h-28 bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 h-full flex items-center justify-center text-white">
        <p>&copy; {new Date().getFullYear()} RIECMA. Todos los derechos reservados.</p>
      </div>
    </footer>
  </body>
</html>